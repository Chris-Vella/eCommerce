@{
    ViewData["Title"] = "Products | Store";
}
@model eCommerce.Models.Product

@Html.Partial("./Partials/Header")

<div id="main">
    <h1>@ViewBag.thisProduct.product_name</h1>
    <img id="showImg" src="@ViewBag.thisProduct.image" alt="@ViewBag.thisProduct.product_name">
    <h3>@ViewBag.thisProduct.description</h3>
    <p><span>@ViewBag.thisProduct.product_quantity</span> currently left in stock.</p>
    <br>
    <a href="/products">More products.</a>
</div>