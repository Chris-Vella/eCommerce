@{
    ViewData["Title"] = "Customers | Store";
}
@model eCommerce.Models.Customer

@Html.Partial("./Partials/Header")

<div id="main">
    <h1>Add a new Customer</h1>
    
    <form asp-action="NewCustomer" asp-controller="Home" method="post">
        <label asp-for="name"></label>
        <span asp-validation-for="name"></span>
        <input asp-for="name"/>
        <button type="submit">Add</button>
    </form>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer Name:</th>
                <th>Created Date:</th>
                <th>Actions:</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var customer in @ViewBag.AllCustomers) 
                {
                    <tr>
                        <td>@customer.name</td>
                        <td>@customer.created_at.ToString("D")</td>
                        <td><a href="">Remove</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
</div>